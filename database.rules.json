{
  "rules": {
    ".read": "auth != null",
    "messages": {
      "$chatid": {
        ".read": "root.child('chat_members').child($chatid).hasChild(auth.uid)",
        ".write": "root.child('chat_members').child($chatid).hasChild(auth.uid) && !data.exists()"
      }
    },
    "existing_chats": {
      "$uid": {
        ".read": "$uid === auth.uid"
      }
    }
  }
}
